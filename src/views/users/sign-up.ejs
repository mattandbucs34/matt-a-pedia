<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  <% include ../static/partials/navbar.ejs %>
  
  <main class="container">
    <% include ../static/partials/messages.ejs %>
    
    <h2>Welcome to Matt-A-Pedia!</h2>
    <h3>Please sign up</h3>
    <div class="row">
      <div class="col-md-8">
        <form action="/users" method="POST">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" name="username" placeholder="Enter a Username" class="form-control" aria-describedby="usernameHelp">
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" placeholder="Enter your email" class="form-control" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="Create Password" class="form-control" aria-describedby="passwordHelp">
          </div>
          <div class="form-group">
            <label for="confirmPW">Confirm Password:</label>
            <input type="password" name="confirmPW" placeholder="Confirm Password" class="form-control" aria-describedby="passwordHelp">
          </div>
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
      </div>
    </div>
  </main>
  <% include ../static/partials/baseScripts.ejs %>
</body>
</html>